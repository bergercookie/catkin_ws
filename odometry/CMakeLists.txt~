cmake_minimum_required(VERSION 2.8.3)
project(odometry)

find_package(catkin REQUIRED COMPONENTS
  arduino_feedback
  roscpp
  rospy
  std_msgs
  message_generation
  tf
)

add_message_files(
   FILES
   odo_msg.msg
 )

generate_messages(
   DEPENDENCIES
   std_msgs
)

catkin_package(	
   CATKIN_DEPENDS message_runtime
 )

include_directories(
  ${catkin_INCLUDE_DIRS}
)

add_executable(odometry_node_2w odometry_node3.cpp)
add_executable(odometry_node_4w odometry_node_4w.cpp)
add_executable(plot plot.cpp)

target_link_libraries (plot ${catkin_LIBRARIES})
target_link_libraries (odometry_node_2w ${catkin_LIBRARIES})
target_link_libraries (odometry_node_4w ${catkin_LIBRARIES})
include_directories(
  ${catkin_INCLUDE_DIRS}
)

add_dependencies (plot odometry_generate_messages_cpp)
add_dependencies (odometry_node_2w odometry_generate_messages_cpp)
add_dependencies (odometry_node_4w odometry_generate_messages_cpp)
install(PROGRAMS odometry_nodepy.py plot.py
        DESTINATION ${CATKIN_PACKAGE_BIN_DESTINATION})
